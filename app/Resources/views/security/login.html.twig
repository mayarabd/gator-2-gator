{% extends 'base.html.twig' %}

{% block body %}
    <div class="container form-container">
        <div class="row">
            <div class="col-xs-12">
                <h1>Login</h1>

                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                {{ form_start(form) }}
                {{ form_row(form._username) }}
                {{ form_row(form._password) }}
                &nbsp;   &nbsp;
                <button type="submit" class="btn btn-success btn-float-right" formnovalidate>Login <span class="fa fa-lock"></span></button>
                <a class="btn btn-primary btn-float-right" href="{{ path('user_register') }}">Register</a>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
                <button type="button" class="btn btn-default btn-xlarge">daring</button>
            </div>
            <div class="container col-xs-8 btn-container" data-toggle="popover"
                 data-trigger="focus"  data-placement="top" title="Feature not yet enabled!"
                 data-content="Please check back soon!!! We're always adding new and
                           amazing content">
                <button type="button" class="btn btn-default btn-xlarge">understated</button>
            </div>
        </div>
    </div>
{% endblock %}
</body>

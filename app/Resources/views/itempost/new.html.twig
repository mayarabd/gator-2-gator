{% extends 'base.html.twig' %}

{% block body %}
    <div class="container form-container">
        <h1>Post new item to sell</h1>

        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary btn-float-right"  formnovalidate>
            Create Listing
        </button>
        <a class="btn btn-danger btn-float-right-margin" href="{{ path('itempost_index') }}">Cancel</a>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            var linkId = "#post-item";
            $(linkId).parent().addClass('active');
            $(linkId).parent().siblings().removeClass('active');
        } );
    </script>
{% endblock %}

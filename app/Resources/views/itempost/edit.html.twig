{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>{{ itemPost.name }}</h1>

        {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <button type="submit" class="btn btn-primary" formnovalidate>Submit</button>
        <a class="form-link" href="{{ path('itempost_delete', { 'id': itemPost.id }) }}">Delete</a>
        {{ form_end(edit_form) }}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            var linkId = "#itempost";
            $(linkId).parent().addClass('active');
            $(linkId).parent().siblings().removeClass('active');
        } );
    </script>
{% endblock %}